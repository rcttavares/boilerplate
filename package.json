{
  "name": "boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome lint .",
    "check": "biome check --write .",
    "prepare": "node ./node_modules/husky/lib/bin.js install",
    "audit": "npm audit",
    "audit:prod": "npm audit --omit=dev",
    "test": "jest --passWithNoTests --maxWorkers=50%",
    "test:watch": "jest --watch --maxWorkers=25%",
    "test:ci": "jest --runInBand",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "generate": "npx plop --plopfile generators/plopfile.js"
  },
  "dependencies": {
    "next": "^16.1.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "styled-components": "^6.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.3",
    "@storybook/addon-docs": "^10.2.1",
    "@storybook/addon-links": "^10.2.1",
    "@storybook/addon-onboarding": "^10.2.1",
    "@storybook/nextjs-vite": "^10.2.1",
    "@storybook/testing-library": "^0.2.0",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.12.0",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "husky": "^8.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-styled-components": "^7.1.1",
    "lint-staged": "^15.2.10",
    "minimatch": "file:vendor/minimatch-compat",
    "plop": "^4.0.0",
    "prettier": "3.0.3",
    "storybook": "^10.2.1",
    "typescript": "5.2.2"
  },
  "overrides": {
    "minimatch": "file:vendor/minimatch-compat"
  }
}
